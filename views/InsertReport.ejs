<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   
    <title>Document</title>
    <style>
      * {
    margin: 0;
    padding: 0;
    font-family: sans-serif;
    font-weight: 600;
}

table {
    border-collapse: separate;
    border-spacing: 0;
}

th, td {
    border: 2px black solid;
    padding: 5px;
}

.signatures p {
    white-space: nowrap;
}

.flex {
    display: flex;
    align-items: center;
    gap: 10px;
}

.flex-between {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo {
    height: 80px; width: 120px
}
form{
  display:grid;
  grid-template-columns: 1fr 1fr 1fr;
}
input {
    background-color: rgb(233, 233, 233);
    border-radius: 4px;
    border: 0;
    padding: 4px 8px;
    margin-bottom: 4px;
}

button {
    background-color: #14ab55;
    color: white;
    padding: 4px 8px;
    border: 0;
    margin-top: 5px;
    border-radius: 4px;
}
    </style>
  </head>
  <body>
    <div style="width: fit-content">
      <div style="border: 2px black solid; margin: 2px">
        <div style="border: 2px black solid" class="flex-between">
          <div class="logo"></div>
          <p style="text-align: center">
            Welder Qualification Test Record Sheet | DOC NO # :<span>R-<%= id %></span>
          </p>
          <img class = "logo" src="https://i.ibb.co/jgGwH67/logo.png">
        </div>
        <div>
          <table>
            <thead>
              <tr>
              
                <th>Welder ID</th>
                <th>Iqama Number</th>
                <th>Test Coupon ID</th>
                <th>Date of Inspection</th>
                <th>Welding Process(es)</th>
                <th>Type of welding (manual/ semi-auto)</th>
                <th>Backing (with /without)</th>
                <th>Type of Weld/Joint</th>
                <th>Thickness</th>
                <th>Product Type (Plate or Pipe)</th>
                <th>Diameter of Pipe</th>
                <th>Base Metal P Number</th>
                <th>Filler Metal or electrode specification(s) (SFA)</th>
                <th>Filler Metal F-Number (S)</th>
                <th>Filler Metal addition/Deletion ( GTAW / PAW)</th>
                <th>Deposit thickness for each process</th>
                <th>Welding Position (s)</th>
                <th>Vertical Progression (s)</th>
                <th>Type of Fuel Gas (OFW)</th>
                <th>Inert gas backing (GTAW, PAW, GMAW)</th>
                <th>
                  Transfer Mode (spray, globular, or pulse to sort circuit-GMAW)
                </th>
                <th>Current Type I Polarity (AC. DCEP, DCEN)</th>
                <th>Voltage</th>
                <th>Current</th>
                <th>Travel Speed</th>
                <th>InterPass Temperature</th>
                <th>Pre Heat (If Applicable)</th>
                <th>Post Weld Heat Treatment (If Applicable)</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
          <div
            class="signatures"
            style="
              border: 2px black solid;
              padding: 40px 10px;
              display: flex;
              gap: 210px;
              font-size: 14px;
            "
          >
        </div>
      </div>      
      </div>
    </div>
  
    <form style="padding: 20px 10px 0 10px" id="data-form" method="post" action="/report/addRows/<%= id %>">
      <label for="ContarctorDetails">Contarctor Details:</label>
      <input type="text" name="contractor_details" id=""><br />
      <label for="witness_inspector">Witness Inspector:</label>
      <input type="text" name="witness_inspector" id=""><br />
      <label for="project_details">Project Details</label>
      <input type="text" name="project_details" id=""><br />
      <label for="qc_supervisor">QC Supervisor</label>
      <input type="text" name="qc_supervisor" id=""><br />
      <label for="welder-id">Welder ID:</label>
      <input type="text" id="welder-id" name="welder_id" /><br />

      <label for="iqama-number">Iqama Number:</label>
      <input type="text" id="iqama-number" name="iqama_no" /><br />

      <label for="test-coupon-id">Test Coupon ID:</label>
      <input type="text" id="test-coupon-id" name="test_coupon_id" /><br />

      <label for="date-of-inspection">Date of Inspection:</label>
      <input
        type="text"
        id="date-of-inspection"
        name="date_of_inspection"
      /><br />

      <label for="welding_process">Welding Process(es):</label>
      <input type="text" id="welding-process" name="welding_process" /><br />

      <label for="type-of-welding">Type of welding (manual/semi-auto):</label>
      <input type="text" id="type-of-welding" name="type_of_welding" /><br />

      <label for="backing">Backing (with/without):</label>
      <input type="text" id="backing" name="backing" /><br />

      <label for="type-of-weld-joint">Type of Weld/Joint:</label>
      <input
        type="text"
        id="type-of-weld-joint"
        name="typeof_weld"
      /><br />

      <label for="thickness">Thickness:</label>
      <input type="text" id="thickness" name="thickness" /><br />

      <label for="product-type">Product Type (Plate or Pipe):</label>
      <input type="text" id="product-type" name="product_type" /><br />

      <label for="diameter-of-pipe">Diameter of Pipe:</label>
      <input type="text" id="diameter-of-pipe" name="diameter_of_pipe" /><br />

      <label for="base_metal_p_number">Base Metal P Number:</label>
      <input
        type="text"
        id="base-metal-p-number"
        name="base_metal_p_number"
      /><br />

      <label for="filler-metal-spec"
        >Filler Metal or electrode specification(s) (SFA):</label
      >
      <input
        type="text"
        id="filler-metal-spec"
        name="sfa"
      /><br />

      <label for="filler-metal-f-number">Filler Metal F-Number (S):</label>
      <input
        type="text"
        id="filler-metal-f-number"
        name="s"
      /><br />

      <label for="filler-metal-addition"
        >Filler Metal addition/Deletion (GTAW/PAW):</label
      >
      <input
        type="text"
        id="filler-metal-addition"
        name="gtaw_paw"
      /><br />

      <label for="deposit-thickness">Deposit thickness for each process:</label>
      <input
        type="text"
        id="deposit-thickness"
        name="deposit_thickness"
      /><br />

      <label for="welding-position">Welding Position(s):</label>
      <input type="text" id="welding-position" name="welding_position" /><br />

      <label for="vertical-progression">Vertical Progression(s):</label>
      <input
        type="text"
        id="vertical-progression"
        name="vertical_progression"
      /><br />

      <label for="type-of-fuel-gas">Type of Fuel Gas (OFW):</label>
      <input type="text" id="type-of-fuel-gas" name="ofw" /><br />

      <label for="inert-gas-backing"
        >Inert gas backing (GTAW, PAW, GMAW):</label
      >
      <input
        type="text"
        id="inert-gas-backing"
        name="inert_gas"
      /><br />

      <label for="transfer-mode"
        >Transfer Mode (spray, globular, or pulse to short circuit-GMAW):</label
      >
      <input type="text" id="transfer-mode" name="transfer_mode" /><br />

      <label for="current-type"
        >Current Type I Polarity (AC. DCEP, DCEN):</label
      >
      <input type="text" id="current-type" name="type_polarity" /><br />

      <label for="voltage">Voltage:</label>
      <input type="text" id="voltage" name="voltage" /><br />

      <label for="current">Current:</label>
      <input type="text" id="current" name="current" /><br />

      <label for="travel-speed">Travel Speed:</label>
      <input type="text" id="travel-speed" name="travel_speed" /><br />

      <label for="interpass-temperature">InterPass Temperature:</label>
      <input
        type="text"
        id="interpass-temperature"
        name="interpass_temperature"
      /><br />

      <label for="pre-heat">Pre Heat (If Applicable):</label>
      <input type="text" id="pre-heat" name="pre_heat" /><br />

      <label for="post-weld-heat-treatment"
        >Post Weld Heat Treatment (If Applicable):</label
      >
      <input
        type="text"
        id="post-weld-heat-treatment"
        name="post_weld"
      /><br />
      <input style="grid-column:2/2" type="submit" value="Add Row"/> 
    </form>
    <button style="grid-column:2/2"> Save</button>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
          const form = document.getElementById("data-form");
          const tableBody = document.querySelector("table tbody");
          form.addEventListener("submit", async function (event) {
            

              const newRowData = {};
              // Loop through the form elements and create table cells
              for (let i = 0; i < form.elements.length; i++) {
                  const input = form.elements[i];
                  if (input.type !== "submit") {
                      const cell = document.createElement("td");
                      cell.textContent = input.value;
                      newRowData[input.name] = input.value; // Store data in an object
                      tableBody.appendChild(cell);
                  }
              }
               
              // Send POST request to a frontend route (replace with your route)
           

              // Reset the form
              form.reset();
          });
      });
  </script>
  </body>
</html>
